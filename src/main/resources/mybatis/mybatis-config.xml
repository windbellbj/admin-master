<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	
	<settings> 
        <setting name="cacheEnabled" value="true" /><!-- 全局映射器启用缓存 -->   
        <setting name="useGeneratedKeys" value="true" /> 
        <setting name="defaultExecutorType" value="REUSE" />
		<setting name="callSettersOnNulls" value="true"/>
		<!--驼峰命名-->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
		<!--  
		打印查询语句 -->
		<setting name="logImpl" value="STDOUT_LOGGING" /> 
    </settings>

	<typeAliases>
		<typeAlias type="com.lxl.admin.entity.Menu" alias="Menu"  />
		<typeAlias type="com.lxl.admin.entity.User" alias="user"  />
		<typeAlias type="com.lxl.admin.entity.Role" alias="role"  />
		<!--<typeAlias type="com.lxl.admin.entity.Category" alias="category"  />-->
		<typeAlias type="com.lxl.admin.util.ParameterMap" alias="pm"/>
	</typeAliases>
	
</configuration>